        if ((ENVIRON["GROUP_CONVERT"] == 1) && (index(type,"MPI_Group") > 0)) {
            printf"  if ( *%s != MPI_UNDEFINED )\n  {\n",len_parameter
            printf"    for (i = 0; i < *%s; i++) \n",len_parameter
            printf"      %s[i] = MPI_Group_c2f(%sC[i]);\n",para,para
