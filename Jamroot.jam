# using gc ;
import feature ;
feature.feature gc : boehm mps mps-prep
                : symmetric implicit composite propagated link-incompatible ;
feature.compose <gc>boehm : <define>USE_BOEHM ;
feature.compose <gc>mps : <define>USE_MPS ;
