+    T_sp varArgsList(int n_args, ... )
+    {
+	va_list ap;
+	va_start(ap, n_args);
+	Cons_O::CdrType_sp first = _Nil<Cons_O::CdrType_O>();
+	Cons_O::CdrType_sp* cur = &first;
+	for(int i = 1; i <= n_args; i++) {
+	    T_sp obj = *(va_arg(ap, const T_sp*));
+	    Cons_sp one = Cons_O::create(obj);
+	    *cur = one;
+	    cur = one->cdrPtr();
+	}
+	va_end(ap);
+	return first;
+    }
 
