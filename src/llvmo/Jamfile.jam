	debugLoc.cc
	llvmoDwarf.cc
	link_intrinsics.cc
	intrinsics.cc
	insertPoint.cc
	irtests.cc
	llvmoExpose.cc
	llvmoPackage.cc
        clbindLlvmExpose.cc
        ;


alias llvmo : $(sources) ;



